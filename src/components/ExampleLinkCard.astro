---
const { title, href, iconClass, bgColor, iconColor } = Astro.props;
---

<a class="grid grid-cols-4 gap-2 shadow rounded" href={href}>
    <div
        class={`flex col-span-1 ${bgColor} ${iconColor} items-center justify-center text-xl rounded-l shadow-inner`}
    >
        <i class={iconClass}></i>
    </div>
    <div class="flex flex-col p-2 col-span-3">
        <div class="font-normal">{title}</div>
        <div class=""><slot /></div>
    </div>
</a>
