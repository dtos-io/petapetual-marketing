---
const { iconClass, bgClass } = Astro.props;

const staticIconClass = `absolute ${iconClass}`;
const pingIconClass = `relative ${iconClass} animate-ping`;
---

<div class={`flex flex-row items-center ${bgClass} rounded text-stone-200`}>
    <div
        class="flex flex-row items-center gap-2 p-2 bg-stone-700 rounded-l grow"
    >
        <span>Prayer Stream</span>

        <div class="relative flex flex-col">
            <i class="absolute fas fa-circle-notch animate-spin"></i>
            <i class="relative fas fa-slash rotate-45 animate-spin"></i>
        </div>
    </div>

    <div class="relative flex flex-col p-2 h-full">
        <i class={staticIconClass}></i>
        <i class={pingIconClass}></i>
    </div>
</div>
