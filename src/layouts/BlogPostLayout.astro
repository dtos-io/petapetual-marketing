---
import MasterLayout from "./MasterLayout.astro";
const { frontmatter } = Astro.props;
---

<MasterLayout
    title={`${frontmatter.title}`}
    description={frontmatter.description}
>
    <section
        class="flex flex-col gap-4 m-4 blogPost lg:max-w-6/12 lg:mx-auto lg:my-16"
    >
        <div class="flex flex-col">
            <a href="/blog" class="underline text-blue-600"
                >&NestedLessLess; Back to Blog index</a
            >
            <h1 class="text-2xl font-semibold">{frontmatter.title}</h1>
            <h2 class="text-sm">by {frontmatter.author}</h2>
            <h2 class="text-stone-500 text-sm">
                {frontmatter.pubDate.split("T")[0]}
            </h2>
        </div>

        <slot />

        <div class="flex flex-row justify-center gap-8 text-sm my-4">
            <i class="fas fa-star-of-life"></i>
            <i class="fas fa-star-of-life"></i>
            <i class="fas fa-star-of-life"></i>
        </div>
    </section>
</MasterLayout>
