---
import DefaultPageLayout from "../../layouts/DefaultPageLayout.astro";

type BlogPost = {
    frontmatter: { pubDate: string };
};

const allPosts: BlogPost[] = Object.values(
    import.meta.glob("./posts/*.md", { eager: true }),
);

const sortedAllPosts = allPosts
    .sort((a, b) => {
        return a.frontmatter.pubDate.localeCompare(b.frontmatter.pubDate);
    })
    .reverse();
---

<DefaultPageLayout title="Blog">
    <h1 class="text-2xl font-semibold">Blog Index</h1>
    <ul class="flex flex-col gap-4 lg:gap-8">
        {
            sortedAllPosts.map((post: any) => (
                <li>
                    <a
                        href={post.url}
                        class="
            font-semibold
            blueLink"
                    >
                        {post.frontmatter.title}
                    </a>
                    <p class="text-sm">by {post.frontmatter.author}</p>
                    <p class="text-stone-500 text-sm">
                        {post.frontmatter.pubDate.split("T")[0]}
                    </p>

                    <p>{post.frontmatter.description}</p>
                </li>
            ))
        }
    </ul>
</DefaultPageLayout>
